<ProfessionFloatLayout>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/icons/profession/background.jpg'

    Button:
        size_hint: 0.12625,0.134
        pos_hint: {"x": 0.015, 'y': 0.84}
        background_normal:  "data/icons/profession/return.jpg"
        background_down:    "data/icons/profession/return.jpg"
        on_press: app.on_main_screen()

    Button:
        id: environment_button
        size_hint: 0.165,0.09
        pos_hint:{"x": 0.175, 'y': 0.862}
        background_normal:  "data/icons/profession/environment.jpg"
        background_down:    "data/icons/profession/environment.jpg"
        on_press: root.on_environment_selected()

    Button:
        id: lights_button
        size_hint: 0.1575,0.09
        pos_hint:{"x": 0.39625, 'y': 0.862}
        background_normal:  "data/icons/profession/lights.jpg"
        background_down:    "data/icons/profession/lights.jpg"
        on_press: root.on_lights_selected()

    Button:
        id: atmosphere_button
        size_hint: 0.12875,0.09
        pos_hint:{"x": 0.6175, 'y': 0.862}
        background_normal:  "data/icons/profession/atmosphere.jpg"
        background_down:    "data/icons/profession/atmosphere.jpg"
        on_press: root.on_atmosphere_selected()

    Button:
        id: cover_button
        size_hint: 0.1525,0.09
        pos_hint:{"x": .8, 'y': 0.862}
        background_normal:  "data/icons/profession/cover.jpg"
        background_down:    "data/icons/profession/cover.jpg"
        on_press: root.on_cover_button_selected()

    #左
    Button:
        size_hint: 0.0575, 0.092
        pos_hint: {"x": 0.03375, 'y': 0.386}
        background_normal:  "data/icons/profession/left.jpg"
        background_down:    "data/icons/profession/left.jpg"
        on_release: root.go_previous_screen()

    #右
    Button:
        size_hint: 0.0575, 0.092
        pos_hint: {"x": 0.91375, 'y': 0.386}
        background_normal:  "data/icons/profession/right.jpg"
        background_down:    "data/icons/profession/right.jpg"
        on_release: root.go_next_screen()
    #专家模式主页
    ScreenManager
        id: sm_profession
        #新风
        Screen
            name: 'environment_air'
            id: environment_air
            FloatLayout:
                id: air_FloatLayout
                canvas.before:
                    Rectangle:
                        pos: root.width*0.15,root.height*0.204
                        size: root.width*0.7,root.height*0.466
                        source: 'data/icons/profession/air/background_off.jpg'

                Button:
                    id: air_switch_button
                    size_hint: 0.0375, 0.06
                    pos_hint: {"x": 0.69125, 'y': 0.55}
                    background_normal:  "data/icons/profession/air/off.jpg"
                    background_down:    "data/icons/profession/air/off.jpg"
                    on_press: root.on_air_switch_selected()
        #地暖
        Screen:
            name: 'environment_floor_heating'
            id: environment_floor_heating
            FloatLayout:
                id: floor_heating_FloatLayout
                canvas.before:
                    Rectangle:
                        pos: root.width*0.15,root.height*0.204
                        size: root.width*0.7,root.height*0.466
                        source: 'data/icons/profession/floor_heating/background_off.jpg'

                Button:
                    id: floor_heating_switch_button
                    size_hint: 0.0375, 0.06
                    pos_hint: {"x": 0.69125, 'y': 0.55}
                    background_normal:  "data/icons/profession/floor_heating/off.jpg"
                    background_down:    "data/icons/profession/floor_heating/off.jpg"
                    on_press: root.on_floor_heating_switch_selected()

                Button:
                    id: floor_heating_level_1_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.29625, 'y': 0.274}
                    background_normal:  "data/icons/profession/floor_heating/switch_disable.jpg"
                    background_down:    "data/icons/profession/floor_heating/switch_disable.jpg"
                    on_press: root.on_floor_heating_level_selected('1')

                Button:
                    id: floor_heating_level_2_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.385, 'y': 0.274}
                    background_normal:  "data/icons/profession/floor_heating/switch_disable.jpg"
                    background_down:    "data/icons/profession/floor_heating/switch_disable.jpg"
                    on_press: root.on_floor_heating_level_selected('2')

                Button:
                    id: floor_heating_level_3_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.47375, 'y': 0.274}
                    background_normal:  "data/icons/profession/floor_heating/switch_disable.jpg"
                    background_down:    "data/icons/profession/floor_heating/switch_disable.jpg"
                    on_press: root.on_floor_heating_level_selected('3')

                Button:
                    id: floor_heating_level_4_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.56125, 'y': 0.274}
                    background_normal:  "data/icons/profession/floor_heating/switch_disable.jpg"
                    background_down:    "data/icons/profession/floor_heating/switch_disable.jpg"
                    on_press: root.on_floor_heating_level_selected('4')

                Button:
                    id: floor_heating_level_5_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.65, 'y': 0.274}
                    background_normal:  "data/icons/profession/floor_heating/switch_disable.jpg"
                    background_down:    "data/icons/profession/floor_heating/switch_disable.jpg"
                    on_press: root.on_floor_heating_level_selected('5')
        #空调
        Screen:
            name: 'environment_climate'
            id: environment_climate
            FloatLayout:
                id: climate_FloatLayout
                canvas.before:
                    Rectangle:
                        pos: root.width*0.15,root.height*0.096
                        size: root.width*0.7,root.height*0.666
                        source: 'data/icons/profession/climate/background_off.jpg'

                Button:
                    id: climate_switch_button
                    size_hint: 0.0375, 0.06
                    pos_hint: {"x": 0.69125, 'y': 0.642}
                    background_normal:  "data/icons/profession/climate/off.jpg"
                    background_down:    "data/icons/profession/climate/off.jpg"
                    on_press: root.on_climate_switch_selected()

                Button:
                    id: climate_heat_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.2975, 'y': 0.222}
                    background_normal:  "data/icons/profession/climate/switch_disable.jpg"
                    background_down:    "data/icons/profession/climate/switch_disable.jpg"
                    on_press: root.on_climate_mode_selected('heat')

                Button:
                    id: climate_cool_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.19875, 'y': 0.222}
                    background_normal:  "data/icons/profession/climate/switch_disable.jpg"
                    background_down:    "data/icons/profession/climate/switch_disable.jpg"
                    on_press: root.on_climate_mode_selected('cool')

                Button:
                    id: climate_dry_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.395, 'y': 0.222}
                    background_normal:  "data/icons/profession/climate/switch_disable.jpg"
                    background_down:    "data/icons/profession/climate/switch_disable.jpg"
                    on_press: root.on_climate_mode_selected('dry')

                Button:
                    id: climate_up_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.76, 'y': 0.356}
                    background_normal:  "data/icons/profession/climate/up_disable.jpg"
                    background_down:    "data/icons/profession/climate/up_disable.jpg"
                    on_press: root.on_climate_temp_selected('up')

                Button:
                    id: climate_down_button
                    size_hint: 0.0575, 0.092
                    pos_hint: {"x": 0.76, 'y': 0.206}
                    background_normal:  "data/icons/profession/climate/down_disable.jpg"
                    background_down:    "data/icons/profession/climate/down_disable.jpg"
                    on_press: root.on_climate_temp_selected('down')

        Screen:
            name: 'lights_bedroom'
            id: lights_bedroom
            FloatLayout:
                id: lights_bedroom_FloatLayout
                canvas.before:
                    Rectangle:
                        pos: root.width*0.15,root.height*0.204
                        size: root.width*0.7,root.height*0.466
                        source: 'data/icons/profession/lights/bedroom_background_off.jpg'
