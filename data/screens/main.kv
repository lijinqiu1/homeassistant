<MainFloatLayout>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/icons/main/background.jpg'
    #PM 2.5
    Label
        id: atmosphere_Label
        pos_hint: {"x": 0.58, 'y':0.89}
        size_hint: .1, .1
        text_size: self.size
        font_size: self.height*0.5
        color: 71,71,71,1
