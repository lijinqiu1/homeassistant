<EasyFloatLayout>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/icons/easy/background.jpg'
    Button:
        size_hint: 0.12625, 0.134
        pos_hint: {"x": .01, 'y': .85}
        background_normal:  "data/icons/easy/return.jpg"
        background_down:    "data/icons/easy/return.jpg"
        on_press: app.on_main_screen()
    #PM 2.5
    Label
        id: atmosphere_Label
        pos_hint: {"x": 0.58, 'y':0.89}
        size_hint: .1, .1
        text_size: self.size
        font_size: self.height*0.5
        color: 71,71,71,1
    #水质
    Label
        id: WaterQuality_Label
        pos_hint: {"x": 0.58, 'y':0.78}
        size_hint: .1, .1
        text_size: self.size
        font_size: self.height*0.5
        color: 71,71,71,1
    #温度
    Label
        id: temperature_Label
        pos_hint: {"x": 0.78, 'y':0.89}
        size_hint: .1, .1
        text_size: self.size
        font_size: self.height*0.5
        color: 71,71,71,1
    #湿度
    Label
        id: Hum_Label
        pos_hint: {"x": 0.78, 'y':0.78}
        size_hint: .1, .1
        text_size: self.size
        font_size: self.height*0.5
        color: 71,71,71,1
    #信号
    Image
        id: image_singal
        source: 'data/icons/singal/4.png'
        pos_hint: {"x": .87, 'y': .82}
        size_hint: None, None
        allow_stretch: False
        keep_ratio: True

    #左
    Button:
        size_hint: 0.0575, 0.092
        pos_hint: {"x": .07125, 'y': .35}
        background_normal:  "data/icons/easy/left.png"
        background_down:    "data/icons/easy/left.png"
        on_release: root.go_previous_screen()

    #右
    Button:
        size_hint: 0.0575, 0.092
        pos_hint: {"x": .87125, 'y': .35}
        background_normal:  "data/icons/easy/right.png"
        background_down:    "data/icons/easy/right.png"
        on_release: root.go_next_screen()

    ScreenManager:
        id: sm_easy
        Screen:
            name: 'screen_mode'
            id: screen_mode
            FloatLayout:
                canvas.before:
                    Rectangle:
                        pos: 173,50
                        size: 454,289
                        source: "data/icons/easy/mode_background.jpg"
                Button:
                    id: button_mode_day
                    size_hint: 0.08875, 0.416
                    pos_hint: {"x": .26, 'y': .21}
                    background_normal:  "data/icons/easy/day.jpg"
                    background_down:    "data/icons/easy/day.jpg"
                    on_press: root.on_mode_day_selected()
                Button:
                    id: button_mode_night
                    size_hint: 0.08625, 0.416
                    pos_hint: {"x": .40, 'y': .21}
                    background_normal:  "data/icons/easy/night.jpg"
                    background_down:    "data/icons/easy/night.jpg"
                    on_press: root.on_mode_night_selected()
                Button:
                    id: button_mode_sleep
                    size_hint: 0.08125, 0.416
                    pos_hint: {"x": .53, 'y': .21}
                    background_normal:  "data/icons/easy/sleep.jpg"
                    background_down:    "data/icons/easy/sleep.jpg"
                    on_press: root.on_mode_sleep_selected()
                Button:
                    id: button_mode_romantic
                    size_hint: 0.07875, 0.416
                    pos_hint: {"x": .67, 'y': .21}
                    background_normal:  "data/icons/easy/romantic.jpg"
                    background_down:    "data/icons/easy/romantic.jpg"
                    on_press: root.on_mode_romantic_selected()

        Screen:
            name: 'screen_cover'
            id: screen_cover
            FloatLayout:
                canvas.before:
                    Rectangle:
                        pos: 173,150
                        size: 456,142
                        source: "data/icons/easy/cover_background.jpg"

            Button:
                id: button_cover_open
                size_hint: 0.0575, 0.092
                pos_hint: {"x": .27, 'y': .35}
                background_normal:  "data/icons/easy/select.jpg"
                background_down:    "data/icons/easy/select.jpg"
                on_press: root.on_cover_open_selected()

            Button:
                id: button_cover_half
                size_hint: 0.0575, 0.092
                pos_hint: {"x": .405, 'y': .35}
                background_normal:  "data/icons/easy/select.jpg"
                background_down:    "data/icons/easy/select.jpg"
                on_press: root.on_cover_half_selected()

            Button:
                id: button_cover_close
                size_hint: 0.0575, 0.092
                pos_hint: {"x": .545, 'y': .35}
                background_normal:  "data/icons/easy/select.jpg"
                background_down:    "data/icons/easy/select.jpg"
                on_press: root.on_cover_close_selected()

            Button:
                id: button_cover_more
                size_hint: 0.08, 0.092
                pos_hint: {"x": .65, 'y': .36}
                background_normal:  "data/icons/easy/more.jpg"
                background_down:    "data/icons/easy/more.jpg"
